% Definition of the title opening frame of the presentation
\newcommand{\titleframe}[3]{
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/title}}
\begin{frame}
\vspace{4cm}
\Huge{\ypurple{\textsf{#1}}}\linebreak
\large{\ypurple{\textsf{#2}}}\linebreak\linebreak
\large{\ypurple{#3}}
\end{frame}
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/simple}}
}

% A requires slide in every Yahoo internal talk
\newcommand{\confidentialityframe}{
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/confidentiality}}
\begin{frame}
\end{frame}
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/simple}}
}

% Divider frames have a different background and style
\newcommand{\dividerframe}[1]{
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/divider}}
\begin{frame}
\Huge{\ypurple{\begin{minipage}{\textwidth}{#1}\end{minipage}}}
\end{frame}
\usebackgroundtemplate{\includegraphics[width=\paperwidth]{backgrounds/simple}}
}

