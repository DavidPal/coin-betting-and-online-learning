\selectcolormodel{rgb}
\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%\definecolor{i6colorscheme1}{HTML}{535967}
\definecolor{i6colorscheme1}{HTML}{545454}
\definecolor{i6colorscheme2}{HTML}{0e0F12}
\definecolor{i6colorscheme3}{HTML}{a0a5b2}
\definecolor{i6colorscheme4}{HTML}{5d5d5d}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{FFFFFF}  %  e.g. title in headline, separation lines
\definecolor{i6colorscheme6}{HTML}{535967}  %  e.g. for alert

\definecolor{yahooPurpleLight}{HTML}{ADADEB}
\definecolor{yahooPurple}{HTML}{780099}

\setbeamercolor{headline}{fg=white,bg=yahooPurple}
\setbeamercolor{title in headline}{fg=i6colorscheme5}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=white}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{fg=white,bg=white}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=yahooPurple}
\setbeamerfont{footline}{size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=yahooPurpleLight}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=white,bg=yahooPurple}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf}

%\setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
%\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

\setbeamercolor{alerted text}{fg=yahooPurple}

%\setbeamercolor{example text}{fg=taorange}
%\setbeamercolor{structure}{fg=ta3skyblue}

% Itemize environment
\setbeamercolor{itemize item}{fg=yahooPurple}
\setbeamertemplate{itemize items}[circle]

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,leftskip=1.5cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  % {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    % \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-0.75ex}\vbox{}%
    \begin{adjustwidth}{0.6cm}{0.6cm}
  }
  \setbeamertemplate{block end}{
    \end{adjustwidth}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[c]
      \begin{column}{.20\paperwidth}
      \end{column}
      \begin{column}{.60\paperwidth}
	\centering
        \vskip2ex
        \usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
        \vskip2ex
      \end{column}
      \begin{column}{.20\paperwidth}
	  % \includegraphics[height=5cm]{corporate_en-US_purple_large_v.png}
	  \includegraphics[height=3cm]{research-logo.png}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{separation line}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{separation line}
    \rule{0pt}{2pt}
  \end{beamercolorbox}

  \begin{beamercolorbox}[ht=4ex,leftskip=1cm,rightskip=1cm]{footline}%
    AutoML Workshop @ ICML 2016 \hfill June 24, 2016 \hfill New York, NY, USA
    \vskip1ex
  \end{beamercolorbox}
}

